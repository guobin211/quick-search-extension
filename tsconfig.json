{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": false,
    "composite": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "target": "es2017",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@types/chrome"
    ]
  },
  "include": [
    "package.json",
    "src/vite-env.d.ts",
    "src/*",
    "src/**/*",
    "vite.config.ts"
  ]
}
